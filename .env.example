# ============================================
# KYC Backend - Example Environment Variables
# ============================================

# MongoDB Atlas Connection
MONGODB_URI="mongodb+srv://<username>:<password>@cluster0.<cluster-id>.mongodb.net/"

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="<your_clerk_publishable_key>"
CLERK_SECRET_KEY="<your_clerk_secret_key>"
CLERK_WEBHOOK_SECRET="<your_clerk_webhook_secret>"

# Setu DigiLocker Integration (Sandbox!)
SETU_DG_BASE_URL="https://dg-sandbox.setu.co"
SETU_CLIENT_ID="<your_setu_client_id>"
SETU_CLIENT_SECRET="<your_setu_client_secret>"
SETU_PRODUCT_INSTANCE_ID="<your_setu_product_instance_id>"

# Callback URL (replace ngrok/local with prod URL)
SETU_REDIRECT_URL="https://<your-ngrok-id>.ngrok-free.app/api/setu-digilocker/callback"

# File Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME="<your_cloudinary_cloud_name>"
CLOUDINARY_API_KEY="<your_cloudinary_api_key>"
CLOUDINARY_API_SECRET="<your_cloudinary_api_secret>"

# Cache & Queue (Upstash Redis)
UPSTASH_REDIS_REST_URL="<your_upstash_redis_url>"
UPSTASH_REDIS_REST_TOKEN="<your_upstash_redis_token>"

# Face Recognition
NEXT_PUBLIC_FACE_MODELS_PATH="/models"
FACE_RECOGNITION_CONFIDENCE_THRESHOLD="0.75"
LIVENESS_DETECTION_THRESHOLD="0.7"
MULTI_FRAME_LIVENESS_THRESHOLD="0.8"

# OCR Services
TESSERACT_WORKER_PATH="/tesseract"
GOOGLE_CLOUD_PROJECT_ID="<your_google_project_id>"
GOOGLE_APPLICATION_CREDENTIALS="<path_to_your_service_account_json>"

# Security & Encryption
ENCRYPTION_KEY="<your_encryption_key>"
JWT_SECRET="<your_jwt_secret>"
SESSION_SECRET="<your_session_secret>"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="60000"        # 1 minute
RATE_LIMIT_MAX_REQUESTS="10"        # requests per window
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS="false"

# Monitoring & Analytics
SENTRY_DSN="<your_sentry_dsn>"
SENTRY_ENVIRONMENT="development"
NEXT_PUBLIC_GA_MEASUREMENT_ID="<your_ga_measurement_id>"

# Notifications
# Email (Resend or other service)
RESEND_API_KEY="<your_resend_api_key>"
FROM_EMAIL="noreply@yourdomain.com"

# SMS (Twilio)
TWILIO_ACCOUNT_SID="<your_twilio_account_sid>"
TWILIO_AUTH_TOKEN="<your_twilio_auth_token>"
TWILIO_PHONE_NUMBER="<your_twilio_phone_number>"

# App Info
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"
NEXT_PUBLIC_APP_NAME="KYC Verification"
NEXT_PUBLIC_SUPPORT_EMAIL="support@yourdomain.com"
NODE_ENV="development"

# API Configuration
API_VERSION="v1"
API_TIMEOUT="30000"             # 30 seconds
MAX_FILE_SIZE="10485760"        # 10MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Background Jobs
JOB_QUEUE_REDIS_URL="redis://localhost:6379"
JOB_ATTEMPTS="3"
JOB_BACKOFF_DELAY="2000"

# Development/Testing Flags
SKIP_AUTH_IN_DEV="false"
ENABLE_DEBUG_LOGS="true"
MOCK_FACE_RECOGNITION="false"
MOCK_OCR="false"

# Production Optimizations (Uncomment in prod)
# MONGODB_POOL_SIZE="10"
# REDIS_CONNECTION_POOL_SIZE="10"
# CLOUDINARY_SECURE="true"
# ENABLE_METRICS="true"
